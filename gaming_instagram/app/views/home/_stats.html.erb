
<% @user2 ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user2) %>">
    <strong id="following" class="stat">
      <%= @user2.following.count %> - following
    </strong>
    
  </a>
  <a href="<%= followers_user_path(@user2) %>">
    <strong id="followers" class="stat">
      <%= @user2.followers.count %>  - followers
    </strong>
    
  </a>
</div>